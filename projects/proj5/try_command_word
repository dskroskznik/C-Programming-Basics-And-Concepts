# Compile your program, producing a.out as the executable
# To run the script, type
# ./try_command_word
# The user input will not be shown on the screen
echo '==================================================='
./a.out TIME 
echo '----------------------------------------------------'
echo 'Expected:'
echo './a.out TIME'
echo 'Output: valid'
echo '----------------------------------------------------'
./a.out time 
echo '----------------------------------------------------'
echo 'Expected:'
echo './a.out time'
echo 'Output: valid'
echo '----------------------------------------------------'
./a.out Zone
echo '----------------------------------------------------'
echo 'Expected:'
echo './a.out Zone'
echo 'Output: invalid'
echo '----------------------------------------------------'
./a.out TIME_ZONE 
echo '----------------------------------------------------'
echo 'Expected:'
echo './a.out TIME_ZONE'
echo 'Output: invalid'
echo '----------------------------------------------------'
./a.out zone8
echo '----------------------------------------------------'
echo 'Expected:'
echo './a.out zone8'
echo 'Output: invalid'
echo '----------------------------------------------------'
./a.out
echo '----------------------------------------------------'
echo 'Expected:'
echo './a.out'
echo 'Output: Incorrect number of arguments. Usage: ./a.out word'
echo '----------------------------------------------------'
./a.out time zone
echo '----------------------------------------------------'
echo 'Expected:'
echo './a.out time zone'
echo 'Output: Incorrect number of arguments. Usage: ./a.out word'
echo '----------------------------------------------------'
